<div id="btc" class="card"><span>BTC</span><span class="price">...</span></div>
<div id="eth" class="card"><span>ETH</span><span class="price">...</span></div>
<div id="gods" class="card"><span>GODS</span><span class="price">...</span></div>
<div id="ronin" class="card"><span>RON</span><span class="price">...</span></div>
<div id="imx" class="card"><span>IMX</span><span class="price">...</span></div>
<div id="hxd" class="card"><span>HXD</span><span class="price">...</span></div>
<div id="sol" class="card"><span>SOL</span><span class="price">...</span></div>

<div class="refresh">Atualiza automaticamente a cada 60s</div>

</div>

<script>

const tokens = {
bitcoin: "btc",
ethereum: "eth",
gods-unchained: "gods",
ronin: "ronin",
immutable-x: "imx",
honeyland: "hxd",
solana: "sol"
}

async function fetchPrices(){
try{

const ids = Object.keys(tokens).join(",")

const res = await fetch(
`https://api.coingecko.com/api/v3/simple/price?ids=${ids}&vs_currencies=usd`
)

const data = await res.json()

for(const coin in tokens){
const element = document.querySelector(`#${tokens[coin]} .price`)
if(data[coin]){
element.innerText = "$" + data[coin].usd.toLocaleString()
}
}

}catch(e){
console.log("Erro ao buscar preços", e)
}
}

fetchPrices()

// atualiza a cada 60 segundos
setInterval(fetchPrices, 60000)

</script>

